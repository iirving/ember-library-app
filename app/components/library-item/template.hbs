<div class="panel panel-default library-item" data-test-library-item-id={{item.id}}>
  <div class="panel-heading">
    <h3 class="panel-title" data-test-library-item-name>{{item.name}}</h3>
  </div>
  <div class="panel-body">
    <p>Address: <span data-test-library-item-address>{{item.address}}</span></p>
    <p>Phone: <span data-test-library-item-phone>{{item.phone}}</span></p>
  </div>

    <div class="panel-footer" >

        <div class="text-left">Number of books: {{item.books.length}}</div>
        <div class="text-right">
          {{#link-to  'libraries.edit'
                      item.id
                      class="btn btn-success btn-xs"
                      data-test-button-edit-library=item.id
          }}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs"
                  {{action 'deleteLibrary' item}}
                  data-test-button-delete-library-id="{item.id}"
          >Delete</button>
        </div>

    </div>


</div>
